#jobs
  %h3= @job.title
  %p= @job.description
  %p= @job.company
  = link_to "Click here for more details...", @job.url, :target => "_blank"

#links
  = link_to("Edit", edit_job_url(@job), class: "btn btn-sm btn-default")
  = link_to("Delete", job_url(@job), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-default")
